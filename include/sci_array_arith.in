#ifndef SCI_ARRAY_ARITH
#define SCI_ARRAY_ARITH

#include <@SCI_PACKAGE_PREFIX@_array>

// Various arithmetics

template <class TYPE, size_t SZ>
sci_array<TYPE, SZ>& operator+=(sci_array<TYPE, SZ>& a,
    const sci_array<TYPE, SZ>& b) {
  for (size_t i=0; i<SZ; ++i) a[i] += b[i];
  return a;
}

#endif // SCI_ARRAY_ARITH

